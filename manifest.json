{
  "manifest_version": 3,
  "name": "ZenFeed",
  "version": "1.0.0",
  "description": "Turn YouTube into a calm, focused, learning space.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
